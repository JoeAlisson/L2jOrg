        <attributes property="PHYSIC" stay-after-death="true">
            <cast-range initial="-1"/>
            <reuse initial="60000"/>
            <effect-point initial="1"/>
            <effect-range initial="-1"/>
            <activate-rate initial="-1"/>
        </attributes>
        <target/>
